{% extends 'base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="../../../assets/css/modifprofil.css">
{% endblock %}

{% block title %}Edit Profil{% endblock %}

{% block body %}
<div class="sidebar">
            <ul class="sidebar__menu">
                <li class="sidebar__content">
                   <a href="{{ path('add_game') }}" class="link">Ajouter Jeu</a>
                </li>
                <div class="border"></div>
                <li class="sidebar__content">
                    <a href="{{ path('list_game') }}" class="link">Liste Jeu</a>
                </li>
                <div class="border"></div>
                <li class="sidebar__content">
                    <a href="{{ path('list_user') }}" class="link">Liste Membre</a>
                </li>
                <div class="border"></div>
                <li class="sidebar__content">
                    <a href="{{ path('admin') }}" class="link">DashBoard</a>
                </li>
                <div class="border"></div>
            </ul>
        </div>
    <div class="container">
        <div class="form__content">
            <h1 class="title big">Modifier Votre Profil</h1>
            <div class="border__form"></div>
            <div class="navbar__profil">
                <ul>
                    <li class="title orange">
                        <a class="title" href="{{ path('profil') }}" >Mon profil</a>
                    </li>
                    <li class="title orange">
                        <a class="title" href="{{ path('user_edit') }}" >Modifier Profil</a>
                    </li>
                    <li class="title orange">
                        <a class="title" href="{{ path('solde') }}" >Mon Solde</a>
                    </li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="title orange">
                            <a class="title" href="{{ path('list_game') }}">Modifier Jeu</a>
                        </li>
                        <li class="title orange">
                            <a class="title" href="{{ path('add_game') }}">Ajouter Jeu</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
                <div class="border__form"></div>
                <h1 class="title">Informations Personnelles</h1>
                 {{ form_start(edituserForm) }}
                 {{ form_row(edituserForm.lastname) }}
                 {{ form_row(edituserForm.firstname) }}
                <input type="text" id="pseudo" placeholder="Pseudo" name="user_pseudo" value="{{ user.username }}" disabled>
                <div class="border__form"></div>
                <h1 class="title">Adresse Mail</h1>
                 {{ form_row(edituserForm.email) }}
                <div class="border__form"></div>
                <h1 class="title">Mot de Passe</h1>
                    {{ form_row(edituserForm.password) }}
                    <div class="border__form"></div>
                    <button type="submit" class="login_button">Modifier</button>
                {{ form_end(edituserForm) }}
        </div>
    </div>
{% endblock %}