{% extends 'base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="../assets/css/profil.css">
{% endblock %}

{% block title %}Profil{% endblock %}

{% block body %}
{% if is_granted('ROLE_ADMIN') %}
<div class="sidebar">
            <ul class="sidebar__menu">
                <li class="sidebar__content">
                   <a href="{{ path('add_game') }}" class="link">Ajouter Jeu</a>
                </li>
                <div class="border"></div>
                <li class="sidebar__content">
                    <a href="{{ path('list_game') }}" class="link">Liste Jeu</a>
                </li>
                <div class="border"></div>
                <li class="sidebar__content">
                    <a href="{{ path('list_user') }}" class="link">Liste Membre</a>
                </li>
                <div class="border"></div>
                <li class="sidebar__content">
                    <a href="{{ path('admin') }}" class="link">DashBoard</a>
                </li>
                <div class="border"></div>
            </ul>
        </div>
    {% endif %}
    <div class="container">
        <div class="form__content">
            <h1 class="title big">Profil</h1>
            <div class="border__form"></div>
            <div class="navbar__profil">
                <ul>
                    <li class="title orange">
                        <a class="title" href="{{ path('profil') }}" >Mon profil</a>
                    </li>
                    <li class="title orange">
                        <a class="title" href="{{ path('user_edit') }}" >Modifier Profil</a>
                    </li>
                    <li class="title orange">
                        <a class="title" href="{{ path('solde') }}">Mon Solde</a>
                    </li>
                     {% if is_granted('ROLE_ADMIN') %}
                    <li class="title orange">
                        <a class="title" href="{{ path('list_game')}}" >Modifier Jeu</a>
                    </li>
                    <li class="title orange">
                        <a class="title" href="{{ path('add_game')}}">Ajouter Jeu</a>
                    </li>
                     {% endif %}
                </ul>
            </div>
                <div class="border__form"></div>
                <h1 class="title">Informations Personnelles</h1>
                <p class="text">{{ lastname }}</p>
                <p class="text">{{ firstname }}</p>
                <p class="text">{{ username }}</p>
                <div class="border__form"></div>
                <h1 class="title">Adresse Mail</h1>
                <p class="text">{{ email }}</p>>
                <div class="border__form"></div>
                <h1 class="title">Mot de Passe { Encrypted }</h1>
                <p class="text">{{ password | slice(0,45) }}...</p>
                <div class="border__form"></div>
        </div>
    </div>
{% endblock %}